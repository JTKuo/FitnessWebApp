# 應用程式設定
APP_NAME="Fitness WebApp"
DEBUG=true
ENVIRONMENT=development
PORT=8000
HOST=127.0.0.1

# 安全設定
SECRET_KEY=your_super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 資料庫連結 (範例：SQLite 或 PostgreSQL)
DATABASE_URL=sqlite:///./fitness_app.db
# DATABASE_URL=postgresql://user:password@localhost:5432/db_name

# AI 模型 API Key
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# MCP (Model Context Protocol)
# 如果有特定的 MCP 伺服器 Token 或配置
MCP_SERVER_URL=http://localhost:8080
MCP_ACCESS_TOKEN=your_mcp_token_here

# 外部 API 整合 (若有需要)
# GOOGLE_FIT_CLIENT_ID=your_id
# GOOGLE_FIT_CLIENT_SECRET=your_secret
# STRAVA_CLIENT_ID=your_id
# STRAVA_CLIENT_SECRET=your_secret
